{
  "name": "korob",
  "version": "0.1.0",
  "description": "Package development tool.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "korob": "bin/cli.js"
  },
  "scripts": {
    "lint": "biome lint . && biome format . && prettier --check .",
    "format": "biome format --write . && prettier --write .",
    "build": "turbo run build:full",
    "build:full": "tsup --clean",
    "dev": "tsup --watch",
    "prepack": "turbo run build:full",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domin-mnd/korob.git"
  },
  "keywords": ["korob", "tsup", "npm"],
  "author": "domin-mnd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domin-mnd/korob/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/domin-mnd/korob#readme",
  "devDependencies": {
    "@domin-mnd/config": "^0.0.3",
    "@turbo/types": "^1.13.0",
    "@types/node": "^20",
    "@vitest/coverage-v8": "^1.4.0",
    "terser": "^5.30.0",
    "turbo": "^1.13.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@biomejs/biome": "^1.6.3",
    "@biomejs/js-api": "^0.5.0",
    "@biomejs/wasm-nodejs": "^1.6.2",
    "c12": "^1.10.0",
    "chokidar": "^3.6.0",
    "citty": "0.1.6",
    "consola": "^3.2.3",
    "nypm": "^0.3.8",
    "prettier": "^3.2.5",
    "tsup": "8.0.2",
    "vitest": "^1.4.0"
  }
}
